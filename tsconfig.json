{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
